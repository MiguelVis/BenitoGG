<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"-->
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Tema de la Splash Screen, para no mostrar ni tÃ­tulo, ni ActionBar -->

    <style name="AppTheme.Splash">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextTitle" parent="AppTheme">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextNormal" parent="AppTheme">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextPrefs" parent="AppTheme">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextFoot" parent="AppTheme">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GameButton">
        <item name="android:background">@drawable/game_button</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textColor">@drawable/game_button_text</item>
    </style>

</resources>
