<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:orientation="horizontal"
    android:background="@color/fondo"
    tools:context="com.app.floppysoftware.benitogg.activities.JuegoActivity"
    >

    <FrameLayout
        android:id="@+id/frameLayoutAcciones"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />

    <!-- LÃ­nea separadora, compuesta por dos views -->

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_padding"
        android:layout_marginStart="@dimen/activity_padding"
        android:background="@color/linea_oscuro"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/activity_padding"
        android:layout_marginEnd="@dimen/activity_padding"
        android:background="@color/linea_claro"/>

    <FrameLayout
        android:id="@+id/frameLayoutEscena"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        />

</LinearLayout>